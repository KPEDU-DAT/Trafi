
.tableresponsive {






@media 
only screen and (max-width: 1500px),
(min-device-width: 768px) and (max-device-width: 2000px)  {

	/* Force table to not be like tables anymore */
	table, thead, tbody, th, td, tr { 
		display: block; 
	}
	
	/* Hide table headers (but not display: none;, for accessibility) */
	thead tr { 
		position: absolute;
		top: -9999px;
		left: -9999px;
	}
	
	tr { border: 1px solid #FFFFFF; }
	
	td { 
		/* Behave  like a "row" */
		border: none;
		border-bottom: 1px solid #eee; 
		position: relative;
		padding-left: 50%; 
	}
	
	td:before { 
		/* Now like a table header */
		position: absolute;
		/* Top/left values mimic padding */
		top: 6px;
		left: 10px;
		width: 60%; 
		padding-right: 1px; 
		white-space: nowrap;
	}
	
	/*
	Label the data
	*/
	td:nth-of-type(1):before { content: "Merkki"; }
	td:nth-of-type(2):before { content: "Malli"; }
	td:nth-of-type(3):before { content: "Rekisteröinti"; }
	td:nth-of-type(4):before { content: "Väri"; }
	td:nth-of-type(5):before { content: "Luokka"; }
	td:nth-of-type(6):before { content: "Ovien lukumäärä"; }
	td:nth-of-type(7):before { content: "Ist.paik. määrä"; }
	td:nth-of-type(8):before { content: "Massa"; }
	td:nth-of-type(9):before { content: "Iskutilavuus"; }
	td:nth-of-type(10):before { content: "S.nettoteho (kW)"; }
	td:nth-of-type(11):before { content: "Kori"; }
	td:nth-of-type(12):before { content: "Kunta"; }
	td:nth-of-type(13):before { content: "Kuvaus"; }
}
}